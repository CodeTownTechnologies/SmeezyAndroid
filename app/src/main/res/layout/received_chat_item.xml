<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dimen_5dp"
    android:layout_marginLeft="@dimen/dimen_10dp"
    android:layout_marginRight="@dimen/dimen_10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_received_chat_item_user"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_gravity="top" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <com.app.smeezy.views.CustomFontTextView
                android:id="@+id/tv_received_chat_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:background="@drawable/edittext_box_transparent"
                android:maxWidth="@dimen/dimen_200dp"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:padding="@dimen/dimen_10dp"
                android:textColor="@color/light_black"
                app:typeface="Gentona_Light.otf"/>

        <com.app.smeezy.views.CustomFontTextView
            android:id="@+id/tv_received_chat_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:background="@color/received_chat_background_color"
            android:maxWidth="@dimen/dimen_200dp"
            android:padding="@dimen/dimen_10dp"
            android:textColor="@color/light_black"
            app:typeface="Gentona_Light.otf"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_received_chat_item_content"
            android:layout_width="@dimen/dimen_200dp"
            android:layout_height="@dimen/dimen_200dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:background="@color/colorPrimary"
            android:visibility="gone" />


    </LinearLayout>

    <com.app.smeezy.views.CustomFontTextView
        android:id="@+id/tv_received_chat_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_60dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:textColor="@color/hint_color"
        app:typeface="Gentona_Light.otf"/>

</LinearLayout>