<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_suggested_friends"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_10dp"
    android:layout_marginRight="@dimen/dimen_10dp"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_suggested_friends_user"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.app.smeezy.views.CustomFontTextView
                android:id="@+id/tv_suggested_friends_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black"
                android:textSize="@dimen/txt_17sp"
                app:typeface="Gentona_Book.otf" />


            <com.app.smeezy.views.CustomFontTextView
                android:id="@+id/tv_suggested_friends_mutual_friends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/popup_title_color"
                android:textSize="@dimen/txt_13sp"
                app:typeface="Gentona_Medium.otf" />

            <com.app.smeezy.views.CustomFontTextView
                android:id="@+id/tv_suggested_friends_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/hint_color"
                android:textSize="@dimen/txt_15sp"
                app:typeface="Gentona_Light.otf" />




        </LinearLayout>

        <com.app.smeezy.views.CustomFontButton
            android:id="@+id/btn_suggested_friends_add_friend"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:background="@drawable/button_background"
            android:drawableLeft="@drawable/addfriend_icon"
            android:drawablePadding="@dimen/dimen_5dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_5dp"
            android:paddingRight="@dimen/dimen_5dp"
            android:text="@string/add_friend"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/txt_13sp"
            app:typeface="Gentona_Light.otf" />



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:background="@drawable/top_devider_line" />

</LinearLayout>