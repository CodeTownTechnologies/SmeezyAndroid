<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.app.smeezy.fragment.FaqFragment">


    <android.support.v7.widget.RecyclerView
        android:overScrollMode="never"
        android:id="@+id/faq_recycler_view"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.app.smeezy.views.CustomFontTextView
        android:layout_centerInParent="true"
        android:id="@+id/faq_empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/no_faq"
        app:typeface="Gentona_Book.otf"/>


</RelativeLayout>
