<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_20dp"
    android:paddingRight="@dimen/dimen_20dp"
    tools:context="com.app.smeezy.fragment.SettingFragment">

    <LinearLayout
        android:id="@+id/ll_setting_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/dimen_50dp"
                android:orientation="vertical">

                <com.app.smeezy.views.CustomFontTextView
                    android:id="@+id/tv_setting_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/notifications"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_15sp"
                    app:typeface="Gentona_Book.otf" />

                <com.app.smeezy.views.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/you_will_receive_all_kind_of_notifications"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_13sp"
                    app:typeface="Gentona_Light.otf" />

            </LinearLayout>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_setting_notification"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@drawable/devider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.app.smeezy.views.CustomFontTextView
                android:id="@+id/tv_setting_stuff_privacy"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50dp"
                android:gravity="center_vertical"
                android:text="@string/trade_borrow_stuff_privacy_private"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_15sp"
                app:typeface="Gentona_Book.otf" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_setting_stuff_privacy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@drawable/devider_line" />



        <com.app.smeezy.views.CustomFontTextView
            android:id="@+id/tv_setting_profile_privacy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:drawableRight="@drawable/arrow_icon"
            android:gravity="center_vertical"
            android:text="@string/profile_privacy"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_15sp"
            app:typeface="Gentona_Book.otf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@drawable/devider_line" />

        <com.app.smeezy.views.CustomFontTextView
            android:id="@+id/tv_interest_blocked_users"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:drawableRight="@drawable/arrow_icon"
            android:gravity="center_vertical"
            android:text="@string/blocked_users"
            android:textAllCaps="true"
            android:textColor="@color/black"
            app:typeface="Gentona_Book.otf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@drawable/devider_line" />

        <com.app.smeezy.views.CustomFontTextView
            android:id="@+id/tv_setting_change_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:drawableRight="@drawable/arrow_icon"
            android:gravity="center_vertical"
            android:text="@string/change_password"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_15sp"
            app:typeface="Gentona_Book.otf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@drawable/devider_line" />

        <com.app.smeezy.views.CustomFontTextView
            android:id="@+id/tv_setting_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:gravity="center_vertical"
            android:text="@string/account"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_15sp"
            app:typeface="Gentona_Book.otf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@drawable/devider_line" />

    </LinearLayout>

</ScrollView>
