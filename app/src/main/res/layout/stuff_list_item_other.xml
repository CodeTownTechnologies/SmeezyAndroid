<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_stuff_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_10dp"
    android:layout_marginRight="@dimen/dimen_10dp"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_stuff_item"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.app.smeezy.views.CustomFontTextView
                android:id="@+id/tv_stuff_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/light_black"
                android:textSize="@dimen/txt_17sp"
                app:typeface="Gentona_Book.otf" />

            <com.app.smeezy.views.CustomFontTextView
                android:id="@+id/tv_stuff_item_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/txt_15sp"
                app:typeface="Gentona_Light.otf" />


        </LinearLayout>

        <ImageView
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:src="@drawable/hand_icon"
            android:id="@+id/img_stuff_hand"
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_30dp" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:background="@drawable/top_devider_line" />
</LinearLayout>