<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dimen_20dp"
    android:layout_marginRight="@dimen/dimen_20dp"
    android:background="@drawable/edittext_box"
    android:gravity="center"
    android:orientation="vertical">


    <com.app.smeezy.views.CustomFontTextView
        android:id="@+id/txt_title_video_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:gravity="center"
        android:text="@string/share_video"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_20sp"
        app:typeface="Gentona_Book.otf" />


    <RadioGroup
        android:id="@+id/rg_video_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/rb_video_type_upload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/selector_radio_blue"
            android:checked="true"
            android:paddingLeft="@dimen/dimen_10dp"
            android:text="@string/upload"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_15sp" />

        <RadioButton
            android:id="@+id/rb_video_type_url"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/selector_radio_blue"
            android:paddingLeft="@dimen/dimen_10dp"
            android:text="@string/url"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_15sp" />

    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp">

        <com.app.smeezy.views.CustomFontButton
            android:id="@+id/btn_video_type_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_17sp"
            app:typeface="Gentona_Light.otf"/>

        <com.app.smeezy.views.CustomFontButton
            android:id="@+id/btn_video_type_submit"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_17sp"
            app:typeface="Gentona_Light.otf"/>

    </LinearLayout>

</LinearLayout>

